@using StudentManagamentSystemBasic.ViewModels
@model studentViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<a class="btn btn-primary" asp-controller="Student" asp-action="Create" role="button">Create</a>
<table class="table">

    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Sex</th>
            <th scope="col">Year</th>
            <th scope="col">Section</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listofstudents)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Sex</td>
                @foreach (var sec in Model.listofclasssections)
                {
                    if (sec.Id == item.classSectionId)
                    {
                        <td>@sec.Year</td>
                        <td>@sec.SectionName</td>
                    } 
                }
                <td>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a class="btn btn-primary" asp-controller="Student" asp-action="Details" asp-route-id="@item.Id" role="button">View</a>
                        <a class="btn btn-info" asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" role="button">Edit</a>
                        <a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


